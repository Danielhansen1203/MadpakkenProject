<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/madpakke_bg"
    tools:context="com.example.daniel.madpakkenproject.MainActivity"
    android:orientation="vertical"

    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="70dp"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    >
    <Button
        android:text="Menuer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/go_to_menu"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:text="Madpakken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="36sp"
        android:layout_alignBottom="@+id/go_to_menu"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/buttonl"
        android:text="Log Ind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:textAppearanceSmall"
        android:layout_below="@+id/go_to_menu"
        android:layout_marginTop="50dp"

        android:textColor="@color/textColor"
        android:textStyle="bold"
        android:background="@drawable/button_selecter"
        />

</RelativeLayout>
</LinearLayout>
